<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

	<Properties>
		<Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n
		</Property>
		<Property name="APP_LOG_ROOT">/var/logs/Auth</Property>
		<!-- <Property name="APP_LOG_ROOT">G:/APP/VST-DMS-APPS/logs/Auth</Property> -->
	</Properties>

	<Appenders>

		<Console name="console" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>

		<RollingFile name="applicationLog"
			fileName="${sys:APP_LOG_ROOT}/auth-application.log"
			filePattern="${sys:APP_LOG_ROOT}/auth-application-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
		
		<RollingFile name="applicationErroLog"
			fileName="${sys:APP_LOG_ROOT}/auth-error-application.log"
			filePattern="${sys:APP_LOG_ROOT}/auth-error-application-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

		<RollingFile name="springLog"
			fileName="${sys:APP_LOG_ROOT}/auth-spring-framework.log"
			filePattern="${sys:APP_LOG_ROOT}/auth-spring-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

		<RollingFile name="aopLog"
			fileName="${sys:APP_LOG_ROOT}/auth-application-aop.log"
			filePattern="${sys:APP_LOG_ROOT}/auth-application-aop-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

		<RollingFile name="hibernateLog"
			fileName="${sys:APP_LOG_ROOT}/auth-database.log"
			filePattern="${sys:APP_LOG_ROOT}/auth-spring-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

	</Appenders>

	<Loggers>

		<Logger name="com.hitech.dms.web.controller" additivity="false"
			level="debug">
			<AppenderRef ref="applicationLog" />
			<AppenderRef ref="console" />
		</Logger>
		
		<Logger name="com.hitech.dms" additivity="false"
			level="error">
			<AppenderRef ref="applicationErroLog" />
			<AppenderRef ref="console" />
		</Logger>

		<Logger name="com.hitech.dms.app.aop" additivity="false"
			level="info">
			<AppenderRef ref="aopLog" />
			<AppenderRef ref="console" />
		</Logger>

		<Logger name="org.springframework" additivity="false"
			level="error">
			<AppenderRef ref="springLog" />
			<AppenderRef ref="console" />
		</Logger>

		<Logger name="org.hibernate" additivity="false" level="error">
			<AppenderRef ref="hibernateLog" />
			<AppenderRef ref="console" />
		</Logger>

		<Root level="INFO">
			<AppenderRef ref="console" />
		</Root>

	</Loggers>

</Configuration>